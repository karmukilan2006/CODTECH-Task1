
import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
public class SimpleCalculator extends JFrame implements ActionListener {

      //Variable Declarations

      private JTextField resultTextField;
      private String currentInput;
      private double currentValue;
      private char currentOperator;

      //Constructor — GUI Setup

      public SimpleCalculator() 
      {
            currentInput = "";
            currentValue = 0;
            currentOperator = ' ';

            //Creating the Display

            resultTextField = new JTextField();
            resultTextField.setFont(new Font("Arial", Font.PLAIN, 20));
            resultTextField.setEditable(false);
            resultTextField.setHorizontalAlignment(JTextField.RIGHT);

            //Creating the Button Panel

            JPanel buttonPanel = new JPanel();
            buttonPanel.setLayout(new GridLayout(4, 4, 5, 5));

            //Adding Buttons to Panel

            String[] buttonLabels = {
            "7", "8", "9", "/",
            "4", "5", "6", "*",
            "1", "2", "3", "-",
            "0", ".", "=", "+"
            };

            //Create Buttons in a Loop

            for (String label : buttonLabels) {
            JButton button = new JButton(label);
            button.setFont(new Font("Arial", Font.PLAIN, 20));
            button.addActionListener(this);
            buttonPanel.add(button);
            }

            //Adding Components to the Window

            setLayout(new BorderLayout());
            add(resultTextField, BorderLayout.NORTH);
            add(buttonPanel, BorderLayout.CENTER);

            //Window Settings

            setTitle("Simple Calculator");
            setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
            setSize(300, 400);
            setLocationRelativeTo(null);
            setVisible(true);
       }

       //Main Method

       public static void main(String[] args) 
       {
                  new SimpleCalculator();
       }

       //Action Listener — Button Click Logic

       public void actionPerformed(ActionEvent e) {
               String command = e.getActionCommand();

               //Number or Decimal Input

               if (Character.isDigit(command.charAt(0)) || command.equals(".")) {
               currentInput += command;
               resultTextField.setText(currentInput);

               //Equals Button (=)

               } else if (command.equals("=")) {
               calculateResult();

               //Clear Button

               } else if (command.equals("C")) {
               currentInput = "";
               currentValue = 0;
               currentOperator = ' ';
               resultTextField.setText("");
               } 

               //Operator (+, -, , /) Pressed

               else {
               calculateResult();
               currentOperator = command.charAt(0);
               currentInput = "";
               }
        }

        //Calculation Logic

        private void calculateResult() {
              if (currentInput.length() > 0) {
              double newValue = Double.parseDouble(currentInput);
              switch (currentOperator) {
              case '+':
              currentValue += newValue;
              break;
              case '-':
              currentValue -= newValue;
              break;
              case '*':
              currentValue *= newValue;
              break;
              case '/':
              if (newValue != 0) {
              currentValue /= newValue;
              } else {
              resultTextField.setText("Error: Division by zero");
              return;
              }
              break;
              default:
              currentValue = newValue;
              break;
              }

              //Update Result Display

              resultTextField.setText(String.valueOf(currentValue));
              }
        }
}
